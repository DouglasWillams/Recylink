{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.cjs",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.cjs"
    },
    {
      "src": "/pages/(.*)",
      "dest": "frontend/pages/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/pages/index.html"
    }
  ]
}